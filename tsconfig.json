{
    "compilerOptions": {
        "allowJs": true,
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "dist/cjs",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "jsxFactory": "AreactApp.h",
        "jsxFragmentFactory": "AreactApp.frag",
        "jsx": "react"
    },
    "include": [
        "./src/**/*",
        "./types/**/*",
        "./*.ts",
        "./*.tsx"
    ]
}